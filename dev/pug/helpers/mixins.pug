mixin icon(name,mod)
	if(mod)
		svg(class="svg-sprite-icon icon-" + name + ' ' + mod)
			use(xlink:href="web/images/sprite/symbol/sprite.svg#" + name)
	else
		svg(class="svg-sprite-icon icon-" + name)
			use(xlink:href="web/images/sprite/symbol/sprite.svg#" + name)

mixin socials(array)
	each key in array
		a(href="#" target='_blank' title=key).socials__link
			+icon(key)

mixin aboutItem(idx, n, t)
	.col-md-3
		.about__item
			img(src=`web/images/general/about/about${idx}.png`, alt=t)
			span.about__number(data-n=n) 0
			span.about__text=t

mixin additionalItem(id, txt)
	.col-md-3
		a(href="#").additional__item
			img(src=`web/images/general/services/services${id}.png`, alt=txt)
			span=txt

mixin linksItem(id, txt)
	.col-md-2
		a(href="#").additional__item.additional__item--links
			.additional__img
				img(src=`web/images/content/links/link${id}.jpg`, alt=txt)
			span=txt

mixin interesItemBtn(idx, id ,txt)
	a.interes-category__buttons(data-toggle='tab' href=`#${id}` role='tab' aria-controls='nav-home' aria-selected='false')
		.interes-category__img
			img(src=`web/images/general/interest/i2-${idx}.png`, alt=txt)
			.tick
				+icon('tick')
		span=txt

mixin interesLink(idx, txt)
	a(href="#" title=txt).interes-link
		.interes-link__img
			img(src=`web/images/general/interest/i3-${idx}.png`, alt=txt)
		span=txt